<div class="container">
  <h1>ログイン</h1>
  <div class="text-center">
    登録されていない場合は
    <%= link_to "ユーザー登録へ", signup_path %>
  </div>
  <%= form_with url: login_path, local: true do |f| %>
    <div>
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email%>
    </div>
    <div>
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>
    </div>
    <%= f.submit "ログイン" %>
  <% end %>
</div>
